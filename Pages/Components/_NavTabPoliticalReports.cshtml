@model IEnumerable<GharchNews.Models.Report>
@using GharchNews.Utilities

<div class="tab-pane fade" id="Political-tab-pane" role="tabpanel" aria-labelledby="Political-tab" tabindex="0">
    <div class="my-2 body-text-NavTab">
        <a asp-page="./Group" asp-route-Group="@ReportGroups.Political" class="text-decoration-none text-NavTab"> <i class="fas fa-bars ms-3"></i> همه اخبار </a>
    </div>
    <div class="card-group mb-4 list-group-unbordered">
        @foreach (var item in Model)
        {
            <div class="card p-2  border-secondary">
                <a asp-page="./Report" asp-route-id="@item.ReportId"><img src="/Img/ReportImages/@item.Image" class="card-img-top body-img-NavTab" title="@item.ImageTitle" alt="@item.ImageAlt"></a>
                <div class="card-body">
                    <a asp-page="./Report" asp-route-id="@item.ReportId" class="text-decoration-none"><p class="card-title text-black body-card-NavTab"> @item.title </p></a>
                    <p class="card-text" style="margin-bottom: 2rem;">
                        @item.Description
                    </p>
                    <p class="card-text" style="position:absolute; bottom:20px;"><small class="text-body-secondary"><i class="fas fa-clock"></i> @item.CreateDate.ToShamsi() </small></p>
                </div>
            </div>
        }
    </div>
</div>
