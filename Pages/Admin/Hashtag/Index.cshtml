@page
@model GharchNews.Pages.Admin.Hashtag.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<hr />
<p>
    <a asp-page="Create" class="btn btn-success"> افزودن هشتگ </a>
</p>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hashtag[0].HashtagName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Hashtag) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HashtagName)
            </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.HashtagId"><i class="fa fa-edit" style="color:darkorange;font-size:20px"></i></a>
                    <a asp-page="Delete" asp-route-id="@item.HashtagId"><i class="fa fa-trash" style="color:red;font-size:20px"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
