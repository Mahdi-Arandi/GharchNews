@page
@model GharchNews.Pages.Admin.Report.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}


<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Report.ReportId" />
            <input type="hidden" asp-for="Report.Image" />
            <div class="form-group">
                <label asp-for="Report.title" class="control-label"></label>
                <input asp-for="Report.title" class="form-control" />
                <span asp-validation-for="Report.title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.Description" class="control-label"></label>
                <textarea asp-for="Report.Description" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Report.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.FullText" class="control-label"></label>
                <textarea asp-for="Report.FullText" id="editor" class="form-control"></textarea>
                <span asp-validation-for="Report.FullText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.Image" class="control-label"></label>
                <input asp-for="imgUp" id="imgUpload" />
                <img id="imgpreview" src="/Img/reportImages/@Model.Report.Image" style="max-width:320px" class="img-thumbnail" /> <br />
                <span asp-validation-for="Report.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.ImageAlt" class="control-label"></label>
                <input asp-for="Report.ImageAlt" class="form-control" />
                <span asp-validation-for="Report.ImageAlt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.ImageTitle" class="control-label"></label>
                <input asp-for="Report.ImageTitle" class="form-control" />
                <span asp-validation-for="Report.ImageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.Source" class="control-label"></label>
                <input asp-for="Report.Source" class="form-control" />
                <span asp-validation-for="Report.Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.Tags" class="control-label"></label>
                <input asp-for="Report.Tags" class="form-control" />
                <span asp-validation-for="Report.Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.CreateDate" class="control-label"></label>
                <input asp-for="Report.CreateDate" class="form-control" dir="ltr" type="text" onclick="Mh1PersianDatePicker.Show(this,'@DateTime.Now.ToString("yyyy/MM/dd")')" />
                <span asp-validation-for="Report.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.Author" class="control-label"></label>
                <input asp-for="Report.Author" class="form-control" />
                <span asp-validation-for="Report.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.View" class="control-label"></label>
                <input asp-for="Report.View" class="form-control" />
                <span asp-validation-for="Report.View" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Report.IsHotNews" /> @Html.DisplayNameFor(model => model.Report.IsHotNews)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Report.HotNewsDate" class="control-label"></label>
                <input asp-for="Report.HotNewsDate" class="form-control" />
                <span asp-validation-for="Report.HotNewsDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.GroupId" class="control-label"></label>
                <select asp-for="Report.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                <span asp-validation-for="Report.GroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-warning" />
                <a asp-page="./Index" class="btn btn-default"> بازگشت به لیست </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgpreview').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgUpload").change(function () {
            readURL(this);
        });
    </script>
}

<script src="/Assets/ckeditor5-build-classic/ckeditor.js"></script>
<script src="/Assets/ckeditor5-build-classic/translations/fa.js"></script>

<script>
    ClassicEditor
        .create(document.querySelector('#editor'), {
            language: 'fa',
            placeholder: 'متن خبر...'
        })
        .catch(error => {
            console.error(error);
        });
</script>

<link href="~/assets/calendar/mh1persiandatepicker.css" rel="stylesheet" />
<script src="~/assets/calendar/mh1persiandatepicker.js"></script>